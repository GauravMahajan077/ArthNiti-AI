{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "backend/app.py": {
      "runtime": "python3.12",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0, max-age=0"
        }
      ]
    }
  ],
  "ignores": [
    "backend/__pycache__/**",
    "backend/*.pyc",
    "backend/.env",
    "*.log"
  ]
}